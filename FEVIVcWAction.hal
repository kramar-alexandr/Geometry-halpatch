remote procedure FEVIVc_PasteAccNumber(var record FEVIVc,Integer);
remote procedure FEVIVc_PasteVECode(var record FEVIVc,var string,string);
remote outer procedure SumUpFEVIVcM(record FEVIVc,var val,var val,var val); // 62

function Boolean FEVIDClassVECodeEFAfter(Integer wn,Integer changedf)
begin
  record FEVIVc FEVIr;
  row FEVIVc FEVIrw;
  Integer rwcnt;
  string 255 vewarn;

  if (changedf!=0) then begin  
    GetWindowRecord(wn,FEVIr);
    DeselectWindow(wn,false);
    FEVIVc_PasteVECode(FEVIr,vewarn,"");
    if (nonblank(vewarn)) then begin    
      MessageBox(0,vewarn);
    end;
    PutWindowRecord(wn,FEVIr);
  end;
  FEVIDClassVECodeEFAfter = true;
  return;
end;

function Boolean FEVIDClassAccNumberEFAfter(Integer wn,Integer fn,Integer rownr,Integer changedf)
begin
  record FEVIVc FEVIr;

  if (changedf!=0) then begin 
    GetWindowRecord(wn,FEVIr);
    DeselectWindow(wn,false);
    FEVIVc_PasteAccNumber(FEVIr,rownr);
    PutWindowRecord(wn,FEVIr);
  end;
  FEVIDClassAccNumberEFAfter = true;
  return;
end;

// 62s
function Boolean FEVIDClassSumEFAfter(Integer wn,Integer changedf)
begin
  record FEVIVc FEVIr;
  if (changedf!=0) then begin  
    GetWindowRecord(wn,FEVIr);
    DeselectWindow(wn,false);
    SumUpFEVIVcM(FEVIr,FEVIr.Sum1,FEVIr.VATVal,FEVIr.TAXAdv);
    FEVIr.Sum2=FEVIr.Sum1+FEVIr.VATVal;
    FEVIr.PayVal=FEVIr.Sum2+FEVIr.TAXAdv;
    PutWindowRecord(wn,FEVIr);
  end;
  FEVIDClassSumEFAfter = true;
  return;
end;
